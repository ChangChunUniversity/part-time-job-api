<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>com.proj.api.utils.CROSUtils</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- ========== User ========== -->
    <!-- ===== 登录 ===== -->
    <servlet>
        <servlet-name>Authorization</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.Authorization</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/api/user/authorization</url-pattern>
    </servlet-mapping>

    <!-- ===== 注册 ===== -->
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/api/user/registration</url-pattern>
    </servlet-mapping>

    <!-- ===== 注册时检查字段 ===== -->
    <servlet>
        <servlet-name>RegistrationInfo</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.RegistrationInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationInfo</servlet-name>
        <url-pattern>/api/user/registration/info</url-pattern>
    </servlet-mapping>

    <!-- ===== 用户信息 ===== -->
    <servlet>
        <servlet-name>UserInfo</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.UserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserInfo</servlet-name>
        <url-pattern>/api/user/info/*</url-pattern>
    </servlet-mapping>

    <!-- ===== 后台用户修改信息 ===== -->
    <servlet>
        <servlet-name>doModifyInf</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.doModifyInf</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doModifyInf</servlet-name>
        <url-pattern>/api/user/modify</url-pattern>
    </servlet-mapping>

    <!-- ========== User ========== -->

</web-app>