<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>com.proj.api.utils.CROSUtils</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- ========== User ========== -->
    <servlet>
        <servlet-name>doAuth</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.doAuth</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doAuth</servlet-name>
        <url-pattern>/api/user/auth</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>doReg</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.doReg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doReg</servlet-name>
        <url-pattern>/api/user/reg</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>doModifyPwd</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.doModifyPwd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doModifyPwd</servlet-name>
        <url-pattern>/api/user/modify_pwd</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>doReginf</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.doRegInf</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doReginf</servlet-name>
        <url-pattern>/api/user/reginf</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>doModifyInf</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.doModifyInf</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doModifyInf</servlet-name>
        <url-pattern>/api/user/modify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>doGetDetails</servlet-name>
        <servlet-class>com.proj.api.auth.servlet.doGetDetails</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>doGetDetails</servlet-name>
        <url-pattern>/api/user/details</url-pattern>
    </servlet-mapping>
    <!-- ========== User ========== -->

</web-app>